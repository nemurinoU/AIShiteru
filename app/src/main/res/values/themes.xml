<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AIShiteru" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background and Surface Colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/primary_variant</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Accent Colors -->
        <item name="colorAccent">@color/accent_color</item>

        <!-- Text Colors -->
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="colorOnBackground">@color/white</item>
    </style>

    <style name="Theme.AIShiteru" parent="Base.Theme.AIShiteru" />
</resources>